<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="98dp"
    app:cardCornerRadius="3dp"
    app:elevation="1dp"
    android:layout_margin="4dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <View
            android:id="@+id/alarmLevelTint"
            android:layout_width="8dp"
            android:layout_height="match_parent"
            android:background="#48A6F1"
            />

        <TextView
            android:id="@+id/serverName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/alarmLevelTint"
            android:text="Server1"
            android:textSize="16sp"
            android:textColor="#000"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/serverName"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:text="2016-04-02"
            android:id="@+id/time"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/serverName"
            android:layout_below="@id/serverName"
            android:layout_marginTop="8dp"
            android:text="CPU占用98%,连续70分钟"
            android:id="@+id/message"
            />

    </RelativeLayout>

</android.support.v7.widget.CardView>
